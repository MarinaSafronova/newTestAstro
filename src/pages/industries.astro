---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import CasePage from "../data/case-page.json";
const currentUrl = Astro.url;
import Data from "../data/industry.json";
---

<Layout
    title={Data.seo_title}
    desc={Data.seo_desc}
>
    <div class="h-[60px] lg:h-[96px]"></div>
    <section
        id="el-hero"
        class="w-screen h-[calc(100vh-60px)] lg:h-[calc(100vh-96px)] bg-cover bg-blend-multiply bg-no-repeat bg-right-bottom overflow-x-hidden max-w-screen relative isolate"
    >
        <div
            class="left-1/2 bottom-[16%] lg:bottom-[8%] transform w-full container -translate-x-1/2 overflow-visible absolute flex items-end md:items-center py-5 z-30"
        >
            <div class="text-white overflow-hidden">
                <div class="hidden md:flex gap-x-3 items-center"></div>
                <div class="my-7 md:my-2"></div>
                <h1 id="hero-title" class="font-medium text-white max-w-xl">
                    <span
                        style="
                                background-image: linear-gradient(
                                    90deg,
                                    #0b9d6c -6.7%,
                                    #319ea6 36.1%,
                                    #7da9ff 112.45%
                                );
                            "
                        class="text-transparent bg-clip-text">{Data.page}</span
                    >
                    <span>{Data.title}</span>
                </h1>
                <p
                    class="leading-[1.5rem] text-[1.02rem] md:text-lg max-w-[340px] text-white/90 lg:max-w-2xl mt-2"
                >
                    {Data.desc}
                </p>
            </div>
        </div>
        <div class="absolute w-full z-10 h-full top-0 left-0 gradient-hero">
        </div>
        <Picture
            src={Data.bg_hero}
            loading="eager"
            alt="Hero image"
            class="object-cover w-full h-full z-0 object-[65%,50%]"
            width="3024"
            height="1594"
            decoding="async"
            formats={["png", "webp"]}
        />
    </section>

    <section
        style="background-image: url('/bgs/06 3.png');"
        class="py-20 lg:py-32 bg-zinc-100"
        id="selector"
    >
        <div class="container mb-10">
            <h2>
                Select your
                <span
                    style="
                            background-image: linear-gradient(
                                90deg,
                                #0b9d6c -6.7%,
                                #319ea6 36.1%,
                                #7da9ff 112.45%
                            );
                        "
                    class="bg-clip-text text-transparent">industry</span
                >
            </h2>
        </div>
        <div class="container">
            <div
                class="navs-mobile-screen flex top-0 left-0 mb-3 z-10 overflow-x-auto gap-2 lg:hidden"
            >
                {
                    Data.industrys.map((item) => (
                        <button
                            role="tab"
                            data-tab-mobile={item.industry_url}
                            class="tabs-nav-mobile p-4 text-left duration-300 shrink-0 ease-in-out border-b text-muted-foreground bg-white border-l-8 border-tran"
                        >
                            {item.industry}
                        </button>
                    ))
                }
            </div>
            <div class="flex w-full bg-white border min-h-[750px]">
                <div
                    style="box-shadow: 10px 0px 20px 0px #40404020"
                    class="tabs-nav max-w-[280px] min-w-[280px] border-r flex-col hidden lg:flex overflow-y-auto"
                >
                    {
                        Data.industrys.map((item) => (
                            <button
                                role="tab"
                                data-tab={item.industry_url}
                                class="header-tab p-4 pl-6 text-left duration-300 ease-in-out border-b text-muted-foreground"
                            >
                                {item.industry}
                            </button>
                        ))
                    }
                    <div class="flex-grow"></div>
                    <a
                        href="/contact"
                        class="p-3 text-center border m-2 bg-primary text-white"
                        >Get in touch</a
                    >
                </div>
                {
                    Data.industrys.map((item) => (
                        <div
                            data-content={item.industry_url}
                            style=`
                                background-image: url(${item.industry_content_bg});
                                background-size: cover;
                                background-position: right;
                            `
                            class="tabcontent p-8 lg:p-14 w-full"
                        >
                            <div class="col-span-1">
                                <h4 class="mb-4">{item.industry}</h4>
                                <div class="prose prose-sm min-w-full text-muted-foreground">
                                   {
                                    item.industry_blocks.map((block) => (
                                        <p>{block.industry_block}</p>
                                        <ul>
                                            {
                                                block.industry_block_details.map((detail) => (
                                                    <li>{detail}</li>
                                                ))
                                            }
                                        </ul>
                                    ))
                                   }
                                </div>
                                <h5 class="mb-4 mt-10">Our analyses</h5>
                                <ul class="w-full gap-5 grid grid-cols-1 lg:grid-cols-3">
                                    {
                                        item.analyses_list.map((analysis) => (
                                        <li class="flex text-muted-foreground gap-3">
