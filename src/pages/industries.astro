<style>
    .gradient-hero {
        @media (min-width: 1024px) {
            background: linear-gradient(29.27deg, #050820 18.84%, #0000 75.39%);
        }
        background: linear-gradient(
            31.32deg,
            #0b192de6 37.52%,
            #24385400 90.66%
        );
    }
    .tabcontent {
        display: none;
    }

    .tabcontent.show {
        display: grid;
    }
    .header-tab {
        cursor: pointer;
    }

    .header-tab.show {
        @apply text-primary;
        @apply bg-primary/10 border-l-8 border-l-primary;
    }
    .tabs-nav-mobile.show {
        @apply text-primary;
        @apply bg-primary/10 border-l-8 border-l-primary;
    }
    .navs-mobile-screen {
        scrollbar-width: thin;
    }

    .navs-mobile-screen::-webkit-scrollbar {
        width: 3px;
    }
    .navs-mobile-screen::-webkit-scrollbar-thumb {
        border-radius: 10px;
        background-color: rgb(33, 154, 166);
    }
    .swiper-wrapper {
        margin-left: 45%;
    }
    @media (max-width: 1024px) {
        .swiper-wrapper {
            margin-left: 0;
        }
    }
</style>
<script define:vars={{ currentUrl }}>
    window.addEventListener("DOMContentLoaded", function () {
        "use strict";
        let tab = document.querySelectorAll(".header-tab"),
            header = document.querySelector(".tabs-nav"),
            tabMobile = document.querySelectorAll(".tabs-nav-mobile"),
            headerSmall = document.querySelector(".navs-mobile-screen"),
            tabContent = document.querySelectorAll(".tabcontent");

        function hideTabContent(a) {
            for (let i = a; i < tabContent.length; i++) {
                tabContent[i].classList.remove("show");
                tabContent[i].classList.add("hide");
            }
        }

        hideTabContent(1);

        function showTabContent(b) {
            if (tabContent[b].classList.contains("hide")) {
                tabContent[b].classList.remove("hide");
                tabContent[b].classList.add("show");
            }
        }
        tab.forEach(function (item) {
            item.addEventListener("click", function (event) {
                tab.forEach(function (i) {
                    i.classList.remove("show");
                });
                item.classList.toggle("show");
            });
        });

        tabMobile.forEach(function (item) {
            item.addEventListener("click", function (event) {
                tabMobile.forEach(function (i) {
                    i.classList.remove("show");
                });
                item.classList.toggle("show");
            });
        });

        header?.addEventListener("click", function (event) {
            let target = event.target;

            if (target && target.classList.contains("header-tab")) {
                for (let i = 0; i < tab.length; i++) {
                    if (target == tab[i]) {
                        hideTabContent(0);
                        showTabContent(i);
                        break;
                    }
                }
            }
        });
        headerSmall?.addEventListener("click", function (event) {
            let target = event.target;

            if (target && target.classList.contains("tabs-nav-mobile")) {
                for (let i = 0; i < tabMobile.length; i++) {
                    if (target == tabMobile[i]) {
                        hideTabContent(0);
                        showTabContent(i);
                        break;
                    }
                }
            }
        });
        tab.forEach(function (item) {
            const tabData = item.getAttribute("data-tab");
            if (currentUrl.includes(tabData)) {
                item.classList.add("show");
            }
        });
        tabContent.forEach(function (item) {
            const tabDataContent = item.getAttribute("data-content");
            if (currentUrl.includes(tabDataContent)) {
                item.classList.add("show");
            }
        });
        tabMobile.forEach(function (item) {
            const tabDataMobile = item.getAttribute("data-tab-mobile");
            if (currentUrl.includes(tabDataMobile)) {
                item.classList.add("show");
            }
        });
    });
</script>
<script>
    import "swiper/css";
    import Swiper from "swiper";
    import { register } from "swiper/element/bundle";
    window.addEventListener("DOMContentLoaded", () => {
        register();
       function initSwiper() {
        const swiper = new Swiper(".featured-slider", {
            slidesPerView: "auto",
            centeredSlides: true,
            loop: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            breakpoints: {
                300: {
                    slidesPerView: "auto",
                    centeredSlides: true,
                    spaceBetween: 20,
                },
                580: {
                    spaceBetween: 40,
                    slidesPerView: "auto",
                },
            },
        });
       }
       initSwiper()     
    });
</script>
