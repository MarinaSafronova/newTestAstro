---
import Layout from "../../layouts/Layout.astro";
import { Picture } from "astro:assets";
import Data from "../../data/case-page.json"
---

<Layout
    title={Data.seo_title}
    desc={Data.seo_desc}
>
    <div class="h-[60px] lg:h-[96px]"></div>
    <section
        id="el-hero"
        class="w-screen h-[calc(100vh-60px)] lg:h-[calc(100vh-96px)] bg-cover bg-blend-multiply bg-no-repeat bg-right-bottom overflow-x-hidden max-w-screen relative isolate"
    >
        <div
            class="left-1/2 bottom-[16%] lg:bottom-[8%] transform w-full container -translate-x-1/2 overflow-visible absolute flex items-end md:items-center py-5 z-30"
        >
            <div class="text-white overflow-hidden">
                <div class="hidden md:flex gap-x-3 items-center"></div>
                <div class="my-7 md:my-2"></div>
                <h1 id="hero-title" class="font-medium text-white max-w-xl">
                    {Data.title}
                </h1>
                <p
                    class="leading-[1.5rem] text-[1.02rem] md:text-lg max-w-[340px] text-white/90 lg:max-w-2xl mt-2"
                >
                    {Data.desc}
                </p>
            </div>
        </div>
        <div class="absolute w-full z-10 h-full top-0 left-0 gradient-hero">
        </div>
        <Picture
            src={Data.bg_hero}
            loading="eager"
            alt="Hero image"
            class="object-cover w-full h-full z-0 object-[65%,50%]"
            width="2174"
            height="1298"
            decoding="async"
            formats={["png", "webp"]}
        />
    </section>
    <section class="section-y-padding bg-zinc-100">
        <div class="container">
            <a
                href={Data.case_studies[0].case_url}
                class="border bg-white grid lg:grid-cols-2 hover:border-primary duration-300"
            >
                <div class="w-full h-full relative aspect-[16/10]">
                    <img
                        src={Data.case_studies[0].case_img}
                        class="object-cover w-full h-[100%]"
                        alt="Drop test of intermodal container preview"
                    />
                </div>
                <div
                    class="order-first border flex flex-col items-start justify-center h-full lg:order-last p-6 lg:px-10 pt-14 pb-10 relative"
                >
                    <div
                        class="uppercase absolute top-2 right-2 text-primary bg-primary/20 px-2 lg:px-4 py-1.5 text-xs lg:text-base"
                    >
                        Featured case study
                    </div>
                    <div>
                        <h3 class="max-w-none">
                            {Data.case_studies[0].title}
                        </h3>
                        <p class="max-w-md text-muted-foreground mt-3">
                            {Data.case_studies[0].desc}
                        </p>
                        <div class="flex items-center gap-x-3 mt-5">
                            <p class="uppercase font-semibold text-primary">
                                Read study
                            </p>
                            <svg
                                width="17"
                                height="17"
                                viewBox="0 0 17 17"
                                fill="none"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <rect
                                    width="17"
                                    height="17"
                                    fill="url(#paint0_linear_27_769)"></rect>
                                <path
                                    d="M5.72681 11.6314L11.6477 5.71045"
                                    stroke="#F3EFE5"
                                    stroke-width="0.944444"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"></path>
                                <path
                                    d="M11.8872 11.0935V5.59107"
                                    stroke="#F3EFE5"
                                    stroke-width="0.944444"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"></path>
                                <path
                                    d="M5.66673 5.47097H11.8865"
                                    stroke="#F3EFE5"
                                    stroke-width="0.944444"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"></path>
                                <defs>
                                    <linearGradient
                                        id="paint0_linear_27_769"
                                        x1="8.5"
                                        y1="2.59722"
                                        x2="25.9722"
                                        y2="22.4306"
                                        gradientUnits="userSpaceOnUse"
                                    >
                                        <stop stop-color="#1F9BA4"></stop>
                                        <stop offset="1" stop-color="#4744DE"
                                        ></stop>
                                    </linearGradient>
                                </defs>
                            </svg>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </section>
    <section class="section-y-padding border-t">
        <div class="container">
            <h2
                style="
                        background-image: linear-gradient(
                            90deg,
                            #0b9d6c -6.7%,
                            #319ea6 36.1%,
                            #7da9ff 112.45%
                        );
                    "
                class="text-transparent bg-clip-text"
            >
                Explore all case studies
            </h2>
        </div>
        <div
            class="container grid grid-cols-1 lg:grid-cols-3 gap-10 mt-7 lg:mt-12"
        >
            {
                Data.case_studies.map((item, index) => {
                    if (index !== 0) {
                        return (
                            <a
                                class="hover:ring-2 hover:ring-primary/50 hover:ring-offset-8 duration-300 hover:ring-offset-white group"
                                href={item.case_url}
                            >
                                <div class="w-full border aspect-[20/10]">
                                    <img
                                        class="w-full h-full object-cover"
                                        src={item.case_img}
                                        alt={item.title}
                                    />
                                </div>
                                <h5 class="text-3xl font-medium max-w-md mt-5">
                                    {item.title}
                                </h5>
                                <div class="flex items-center gap-x-3 mt-5">
                                    <p class="uppercase font-semibold text-primary">
                                        Read study
                                    </p>
                                    <svg
                                        width="17"
                                        height="17"
                                        viewBox="0 0 17 17"
                                        fill="none"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <rect
                                            width="17"
                                            height="17"
                                            fill="url(#paint0_linear_27_769)"
                                        />
                                        <path
                                            d="M5.72681 11.6314L11.6477 5.71045"
                                            stroke="#F3EFE5"
                                            stroke-width="0.944444"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        />
                                        <path
                                            d="M11.8872 11.0935V5.59107"
                                            stroke="#F3EFE5"
                                            stroke-width="0.944444"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        />
                                        <path
                                            d="M5.66673 5.47097H11.8865"
                                            stroke="#F3EFE5"
                                            stroke-width="0.944444"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        />
                                        <defs>
                                            <linearGradient
                                                id="paint0_linear_27_769"
                                                x1="8.5"
                                                y1="2.59722"
                                                x2="25.9722"
                                                y2="22.4306"
                                                gradientUnits="userSpaceOnUse"
                                            >
                                                <stop stop-color="#1F9BA4" />
                                                <stop
                                                    offset="1"
                                                    stop-color="#4744DE"
                                                />
                                            </linearGradient>
                                        </defs>
                                    </svg>
                                </div>
                            </a>
                        );
                    }
                })
            }
        </div>
    </section>
    <section
        style="
                background-image: url('/bgs/color-bg 2.png');
                background-size: cover;
                background-position: center;
            "
        class="bg-primary py-12 lg:py-20"
    >
        <div class="container">
            <h2 class="text-white mb-6 lg:mb-7 max-w-xs lg:max-w-xl">
                Level up your products with Simbased
            </h2>
            <a
                href="/contact"
                class="px-5 lg:px-7 text-sm w-fit items-start py-3 lg:py-3.5 flex gap-x-3 hover:ring-2 hover:ring-primary hover:ring-opacity-50 duration-300 bg-white text-black"
            >
                <span>Get in touch</span>
                <svg
                    width="15"
                    height="15"
                    viewBox="0 0 19 19"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        d="M1 18.4059L12.9944 6.39343"
                        stroke="black"
                        stroke-opacity="0.9"
                        stroke-width="1.7"></path>
                    <path
                        d="M13.0277 6.49352C13.4968 6.49352 13.877 6.11268 13.877 5.64288C13.877 5.17308 13.4968 4.79224 13.0277 4.79224L13.0277 6.49352ZM1.75895 6.49352H13.0277L13.0277 4.79224H1.75895L1.75895 6.49352Z"
                        fill="black"
                        fill-opacity="0.9"></path>
                    <path
                        d="M13.877 6.39338C13.877 5.92358 13.4968 5.54273 13.0277 5.54273C12.5586 5.54273 12.1783 5.92358 12.1783 6.39338L13.877 6.39338ZM13.877 17.6791V6.39338L12.1783 6.39338V17.6791L13.877 17.6791Z"
                        fill="black"
                        fill-opacity="0.9"></path>
                </svg>
            </a>
        </div>
    </section>
</Layout>

<style>
    .gradient-hero {
        @media (min-width: 1024px) {
            background: linear-gradient(29.27deg, #050820 18.84%, #0000 75.39%);
        }
        background: linear-gradient(
            31.32deg,
            #0b192de6 37.52%,
            #24385400 90.66%
        );
    }
</style>
