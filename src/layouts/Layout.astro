---
import MainHeadLayout from "./MainHeadLayout.astro";
import Footer from "../components/Footer/Footer.astro";
import Header from "../components/Header/Header.astro";
import "../styles/global.css";
interface Props {
    title: string | undefined;
    desc?: string;
}

const { title, desc } = Astro.props;
---

<!doctype html>
<html lang="en">
    <MainHeadLayout title={title} desc={desc} />
    <body class="max-w-screen overflow-x-hidden">
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
